<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:layout_marginLeft="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/subject_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/subject_picture"
            android:layout_toEndOf="@id/subject_picture"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mental Ability"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
            <TextView
                android:id="@+id/progress_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/progress"
                android:layout_below="@id/subject_name"/>
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_toRightOf="@id/progress_text"
                android:layout_toEndOf="@id/progress_text"
                android:layout_toLeftOf="@id/progress_percentage"
                android:layout_toStartOf="@id/progress_percentage"
                android:layout_alignBottom="@id/progress_text"
                android:layout_below="@id/subject_name"
                android:indeterminate="false"
                android:progress="50"
                android:max="100"
                android:progressDrawable="@drawable/progressbar_shape"
                />
            <TextView
                android:id="@+id/progress_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:gravity="end"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:text="50%"
                android:textColor="@color/colorPrimary"
                />
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>